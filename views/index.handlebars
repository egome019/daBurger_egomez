<div class="container-fluid">
    <div class="row">
        <div class="col text-center">
            <h1>Da Burgers!</h1>
            <div>
                <img src="../assets/img/daBurger.png" class="image" alt="Image of Burger">
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-6">

            <h2 class="text-center">Burgers that need to be eaten!</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burger-block devoured = true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2 class="text-center">DEVOURED!!!</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burger-block devoured = false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-12">
            <form class="form">
                <div>
                    <input type="text-area" id="burger" name="burger" placeholder="Burgers">
                </div>

                <br>

                <button type="submit" class="btn btn-primary btn-lg">Submit</button>

                <br>
                <br>

                <div>
                    <p>Enter a burger you want to eat Click the "Submit" button</p>
                </div>
            </form>
        </div>
    </div>
</div>